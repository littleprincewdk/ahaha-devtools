.container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.header {
  display: flex;
  padding: 10rpx 0;
  border-top: solid 2rpx #eee;
  border-bottom: solid 2rpx #eee;
}

.back-btn {
  padding: 0 20rpx;
}

.tab-title {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.tab-title.active {
  background-color: #eee;
}

.content {
  flex: 1;
  box-sizing: border-box;
  min-height: 0;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-weight: bold;
  line-height: 64rpx;
  background-color: #eee;
}

.text {
  display: block;
  padding: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}
