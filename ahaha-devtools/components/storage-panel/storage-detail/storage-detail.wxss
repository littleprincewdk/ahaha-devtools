@import '../../../common.wxss';

.container {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.header {
  display: flex;
  padding: 10rpx 0;
  border-top: solid 2rpx #eee;
  border-bottom: solid 2rpx #eee;
}

.back-btn {
  padding: 0 20rpx;
}

.content {
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 0;
}

.key-input {
  padding: 20rpx;
}

.value-input-wrapper {
  flex: 1;
  padding: 20rpx 20rpx 40rpx;
}

.value-input {
  width: 100%;
  height: 100%;
}
