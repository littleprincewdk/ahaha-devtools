.container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 10;
}

.header {
  display: flex;
  padding: 10rpx 0;
  border-top: solid 2rpx #eee;
  border-bottom: solid 2rpx #eee;
}

.back-btn {
  padding: 0 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
  min-height: 0;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  line-height: 64rpx;
  font-weight: bold;
  background-color: #eee;
}

.key-input {
  padding: 20rpx;
}

.text {
  padding: 20rpx;
  display: block;
  word-wrap: break-word;
  word-break: break-all;
}

.value-input-wrapper {
  flex: 1;
  padding: 20rpx 20rpx 40rpx;
}

.value-input {
  width: 100%;
  height: 100%;
}
